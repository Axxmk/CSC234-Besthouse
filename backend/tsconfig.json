{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"src/*": ["src/*"]
		},
		"allowJs": true,
		"sourceMap": true,
		"outDir": "./dist",
		"isolatedModules": true,
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true
	},
	"include": ["./src", "./global.d.ts"],
	"exclude": ["./src/test"]
}
